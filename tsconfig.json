{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noEmit": true,
    "target": "es6",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "react/*"
      ]
    }
  },
  "include": [
    "react"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}